<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <context:component-scan base-package="nl.dalthow.etaron"/>

    <bean id="propertyPlaceholderConfigurer" class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="order" value="0" />
        <property name="locations">
            <list>
                <value>classpath*:application.properties</value>
                <value>classpath*:ws.properties</value>
            </list>
        </property>
    </bean>
    
    <bean id="XMLConverter" class="nl.dalthow.etaron.framework.XMLConverter">
		<property name="unmarshaller" ref="castorMarshaller" />
	</bean>
	
	<bean id="castorMarshaller" class="org.springframework.oxm.castor.CastorMarshaller" >
		<property name="mappingLocation" value="classpath:mapping.xml" />
	</bean>

    <import resource="classpath:META-INF/ws/client-config.xml"/>
    <import resource="classpath:META-INF/resource-loader.xml"/>
</beans>